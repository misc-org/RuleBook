{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@lib": ["./src/lib"],
      "@layout/*": ["./src/layout/*"],
      "@layout": ["./src/layout"],
      "@md/*": ["./src/md/*"],
      "@md": ["./src/md"],
    }
  }
}